<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="INFO" >
      <AppenderRef ref="Console"/>
    </Root>
    <logger name="org" level="ERROR">
        <AppenderRef ref="Console"/>
    </logger>    
    <logger name="org.oso" level="TRACE">
        <AppenderRef ref="Console"/>
    </logger>
  </Loggers>
</Configuration>